{{!< default}} <main id="site-main">
  <div class="blog-content">
    {{!-- Iterate through each posts --}}
    {{#get "posts"}}
    {{#foreach posts}}

    <article class="{{post_class}}">
      <div class="blog-card">

        {{!-- Display primary tag of the post if exists--}}
        {{#if primary_tag}}
        <a href="{{primary_tag.url}}">
          {{primary_tag.name}}
        </a>
        {{/if}}

        <div class="blog-title">
          <a href="{{url}}">
            {{!-- Post title --}}
            <h3>{{title}}</h3>
          </a>
        </div>

        {{!-- Displays post excerpt. Sets to display max 170 chars if not set --}}
        <p>{{excerpt characters="170"}}...</p>

        <div>
          <i><span>Published: {{date published_at timeago="true"}}</span></i>
        </div>

      </div>{{!--/.post-card-content--}}
    </article>

    {{/foreach}}
    {{/get}}
  </div>

  </main>